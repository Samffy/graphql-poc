{
    "name": "samffy/graphql-poc",
    "type": "project",
    "description": "This project is a proof of concept to test graphQL usage in PHP.",
    "keywords": [
        "php", "symfony", "graphql"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Samuel Jobard",
            "email": "samuel.jobard@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "ext-iconv": "*",
        "ext-sqlite3" : "*",
        "overblog/graphql-bundle": "0.11",
        "ramsey/uuid-doctrine": "~1.4",
        "symfony/console": "^4.0",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^4.0",
        "symfony/orm-pack": "^1.0",
        "symfony/yaml": "^4.0"
    },
    "require-dev": {
        "behat/mink-browserkit-driver": "^1.3",
        "behat/mink-extension": "^2.3",
        "behat/mink-goutte-driver": "^1.2",
        "behat/symfony2-extension": "^2.1",
        "doctrine/doctrine-fixtures-bundle": "^3.0",
        "overblog/graphiql-bundle": "^0.1.0",
        "symfony/dotenv": "^4.0",
        "symfony/profiler-pack": "^1.0",
        "symfony/web-server-bundle": "^4.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\Features\\": "tests/features/bootstrap"
        }
    },
    "replace": {
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false
        }
    }
}
